        <layer-list>
            <item android:right="3dp" android:top="3dp">
                <shape>
                    <corners android:radius="6dp" />
                    <solid android:color="#797676" />
                </shape>
            </item>
            <item android:bottom="3dp" android:left="2dp">
                <shape>
                    <gradient android:angle="0" android:centerColor="#83022b" android:endColor="#f4095b" android:startColor="#f10657" />
